//15. Create a function which takes a product object and returns a sentence about the product
// using ?ES6 features.



const printProductDetailes = ({name , specification: {size , capacity}}) => `${name} which is of ${size}, has a capacity of ${capacity}`


const product = {
  name: "Apple MacBook Air 2020",
	specification: {
		capacity: "256GB",
	  size: "13.3 Inch"
	},
  price: 82900
}
console.log(printProductDetailes(product));

//Apple MacBook Air 2020 which is of 13.3 Inch, has a capacity of 256GB